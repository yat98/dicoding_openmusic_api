{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["jest"],
    "rules": {
        "semi" : "error",
        "prefer-const" : "error",
        "require-await" : "error",
        "no-console": "off",
        "no-underscore-dangle": "off",
        "import/extensions": [
            "error",
            {
                "js": "ignorePackages"
            }
        ]
    }
}
